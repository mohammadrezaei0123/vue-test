<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:app="http://schemas.android.com/apk/res-auto"
         android:id="@+id/recMainConstraint1"
         android:background="@drawable/line_borders"
         android:layout_margin="10dp"
         android:layout_width="match_parent"
         android:minHeight="250dp"
         android:layout_height="wrap_content">

    <LinearLayout android:id="@+id/managersLinearRecycle"
                  android:layout_margin="10dp"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:gravity="right"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
        <LinearLayout
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView android:id="@+id/nameValuItem1"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:gravity="right"
                      android:textSize="@dimen/text_login_size"
                      android:textColor="@color/white_p2"
                      android:text="w"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:textSize="@dimen/text_login_size"
                      android:textColor="@color/white_p2"
                      android:text="نام : "/>
        </LinearLayout>
        <LinearLayout
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView android:id="@+id/familyValuItem1"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:gravity="right"
                      android:textSize="@dimen/text_login_size"
                      android:textColor="@color/white_p2"
                      android:text="w"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:textSize="@dimen/text_login_size"
                      android:textColor="@color/white_p2"
                      android:text="نام خانوادگی : "/>
        </LinearLayout>
        <LinearLayout
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView android:id="@+id/usernsmeValuItem1"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:gravity="right"
                      android:textSize="@dimen/text_login_size"
                      android:textColor="@color/white_p2"
                      android:text="w"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:textSize="@dimen/text_login_size"
                      android:textColor="@color/white_p2"
                      android:text="نام کاربری :"/>
        </LinearLayout>
        <LinearLayout
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView android:id="@+id/phoneValuItem1"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:gravity="right"
                      android:textSize="@dimen/text_login_size"
                      android:textColor="@color/white_p2"
                      android:text="w"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:textSize="@dimen/text_login_size"
                      android:textColor="@color/white_p2"
                      android:text="تلفن : "/>
        </LinearLayout>
    </LinearLayout>
    <Space app:layout_constraintTop_toBottomOf="@id/managersLinearRecycle"
           app:layout_constraintBottom_toTopOf="@id/chooseButton1"
           android:layout_width="match_parent"
           android:layout_height="0dp"/>
    <Button android:id="@+id/chooseButton1"
            android:background="@drawable/button_shape"
            android:textSize="@dimen/text_login_size"
            android:textColor="@color/text_button_color"
            android:layout_margin="10dp"
            android:text="انتخاب"
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>